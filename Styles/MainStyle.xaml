<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:oxy="http://oxyplot.org/wpf">


    
    <Style x:Key="TileBorder" TargetType="Border">
        <Style.Setters>
            <Setter Property="Padding" Value="0" />
            <Setter Property="Width" Value="320" />
            <Setter Property="Height" Value="340" />
            <Setter Property="CornerRadius" Value="12" />
            <Setter Property="Margin" Value="0, 15, 15, 0" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="BorderThickness" Value="0" />
            <Setter Property="Background" Value="#323232" />
        </Style.Setters>
    </Style>

    <Style x:Key="StatusBorder" TargetType="Border" BasedOn="{StaticResource TileBorder}">
        <Style.Setters>
            <Setter Property="Width" Value="990" />
            <Setter Property="Height" Value="auto" />
        </Style.Setters>
    </Style>



    <Style x:Key="ParameterStackPanel" TargetType="StackPanel">
        <Style.Setters>
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Orientation" Value="Horizontal" />
        </Style.Setters>
    </Style>



    <Style x:Key="TitleTextBlock" TargetType="TextBlock">
        <Style.Setters>
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="Foreground" Value="Snow" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="0" />
        </Style.Setters>
    </Style>

    

    <Style x:Key="ParameterTextBox" TargetType="TextBox">
        <Style.Setters>
            
            <Setter Property="Background" Value="#323232" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="Foreground" Value="Snow" />

            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="Margin" Value="8, 0, 0, 0" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Width" Value="270" />
            <Setter Property="Height" Value="36" />
            
            <Setter Property="VerticalContentAlignment" Value="Center" />
            
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ScrollViewer Margin="5" x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            
        </Style.Setters>
    </Style>



    <Style x:Key="ActionButton" TargetType="Button">

        <Style.Setters>

            <Setter Property="Background" Value="#323232" />
            <Setter Property="BorderBrush" Value="Gray" />
            <Setter Property="Foreground" Value="Snow" />

            <Setter Property="BorderThickness" Value="2" />
            <Setter Property="FontSize" Value="12" />
            <Setter Property="Height" Value="32" />
            <Setter Property="Width" Value="142" />

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>

        </Style.Setters>

        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#282828"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#000000" />
            </Trigger>
        </Style.Triggers>

    </Style>
    


    <Style x:Key="GraphicPlotView" TargetType="oxy:PlotView">
        <Style.Setters>
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="Margin" Value="-18, 0, 0, -18" />
            <Setter Property="Height" Value="300" />
            <Setter Property="Width" Value="300" />
        </Style.Setters>
    </Style>
    
    

</ResourceDictionary>
